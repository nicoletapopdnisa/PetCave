<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tasks_layout"
    tools:context="com.nicol.petcave_final.TasksPerPet">


    <TextView
        android:id="@+id/textViewTasksForPetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/linearLayoutTasks"
        android:layout_width="307dp"
        android:layout_height="381dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607"
        android:orientation="vertical">

        <ListView
            android:id="@+id/tasksListView"
            android:layout_width="338dp"
            android:layout_height="418dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewNoOfTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewTasksForPetName"
        android:layout_alignBottom="@+id/textViewTasksForPetName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonCreateNewTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewTasksForPetName"
        android:layout_alignBottom="@+id/textViewTasksForPetName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="New Task" />

</RelativeLayout>